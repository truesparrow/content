{
    "name": "@truesparrow/content",
    "version": "0.0.1",
    "description": "The content service.",
    "author": "CHM SQRT2 Team",
    "scripts": {
        "build": "tsc",
        "serve-dev": "mkdir -p out && touch out/index.js && (tsc --watch & nodemon out/index.js) | bunyan --output short",
        "serve-prod": "node out/index.js | bunyan --output simple",
        "test": "tsc && istanbul cover --config ./.istanbul.yml ./node_modules/mocha/bin/_mocha --  $(find out -name '*-test.js') && remap-istanbul -i ./build/coverage/coverage-final.json -o ./build/coverage/coverage-remapped.json && coverage-filter -i ./build/coverage/coverage-remapped.json -o ./build/coverage/coverage-filtered.json",
        "push-coverage-to-codecov": "codecov -f ./build/coverage/coverage-filtered.json",
        "docs": "typedoc src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/truesparrow/content.git"
    },
    "license": "MIT",
    "homepage": "https://github.com/truesparrow/content#readme",
    "filesPack": {
        "out": "e:.",
        "migrations": "c:migrations",
        "Procfile": "f:Procfile",
        "knexfile.js": "f:knexfile.js",
        "package.json": "f:package.json",
        "tsconfig.json": "f:tsconfig.json"
    },
    "dependencies": {
        "@truesparrow/common-js": "=0.0.1",
        "@truesparrow/common-server-js": "=0.0.1",
        "@truesparrow/content-sdk-js": "=0.0.1",
        "@truesparrow/identity-sdk-js": "=0.0.1",
        "async-middleware": "=1.2.1",
        "compression": "=1.7.1",
        "cookie-parser": "=1.4.3",
        "express": "=4.16.2",
        "http-status-codes": "=1.3.0",
        "knex": "=0.14.2",
        "pg": "=7.4.0",
        "raynor": "=0.14.0",
        "uuid": "=3.1.0"
    },
    "devDependencies": {
        "@truesparrow/togemfury": "=0.0.3",
        "@types/bluebird": "=3.5.18",
        "@types/chai": "=4.0.8",
        "@types/compression": "=0.0.35",
        "@types/cookie-parser": "=1.4.1",
        "@types/dotenv": "=4.0.2",
        "@types/express": "=4.0.39",
        "@types/http-status-codes": "=1.0.29",
        "@types/knex": "=0.0.67",
        "@types/mocha": "=2.2.44",
        "@types/node": "=8.0.57",
        "@types/supertest": "=2.0.4",
        "@types/uuid": "=3.4.3",
        "chai": "=4.1.2",
        "codecov": "=3.0.0",
        "coverage-filter": "=1.0.0",
        "dotenv": "=4.0.0",
        "istanbul": "=0.4.5",
        "mocha": "=4.0.1",
        "nodemon": "=1.12.5",
        "raynor-chai": "=0.1.1",
        "remap-istanbul": "=0.9.5",
        "supertest": "=3.0.0",
        "testdouble": "=3.2.6",
        "typedoc": "=0.9.0",
        "typescript": "=2.6.2"
    }
}
